<style>
  .bar::after,
  .bar::before {
    content: "";
    display: block;
    position: absolute;
    width: 10px;
    height: 10px;
    border-radius: 50%;
    background-color: white;
  }
  .bar::after {
    right: 0;
    top: -3px;
  }
  .bar::before {
    left: 0;
    top: -3px;
  }
  .particle {
    position: absolute;
    filter: blur(100px);
    border-radius: 50%;
    width: 200px;
    height: 200px;
    z-index: -1;
  }
  .particle-1 {
    left: 0%;
    bottom: 50%;
    background: rgb(45, 47, 192);
  }
  .particle-2 {
    right: 0%;
    top: 0%;
    background: rgb(45, 47, 192);
  }
  .particle-3 {
    top: 10%;
    left: 0%;
    background: rgb(45, 47, 192);
  }
  .particle-4 {
    left: 0%;
    bottom: 0%;
    background: rgb(45, 47, 192);
  }
  .particle-5 {
    right: 50%;
    top: 25%;
    background: rgb(45, 47, 192);
  }
  .particle-6 {
    right: 0%;
    top: 50%;
    background: rgb(45, 47, 192);
  }
  .particle-7 {
    right: 50%;
    bottom: 20%;
    background: rgb(45, 47, 192);
  }
</style>
